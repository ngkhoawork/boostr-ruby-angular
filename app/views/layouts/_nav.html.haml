                  = link_to "Where to Pitch", "/smart_reports/where_to_pitch"
                %li
                  = link_to "KPI Analytics", "/smart_reports/kpi_analytics"
                %li
                  = link_to "Inactives", "/smart_reports/inactives"
                %li
