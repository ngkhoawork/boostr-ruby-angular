!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title Boostr
    = stylesheet_link_tag    'application', media: 'all'
    = javascript_include_tag 'application'
    = csrf_meta_tags
    %base{ href: "/" }

  %body{ ng: { app: "Boostr" } }
    %header
      - if content_for? :nav
        = yield :nav
      - else
        = render 'layouts/nav'
    %p.notice= notice
    %p.alert= alert
    = yield

