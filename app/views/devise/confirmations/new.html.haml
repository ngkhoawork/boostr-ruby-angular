.row
  #devise-form.col-xs-12.col-md-5.center-block.text-center.center-element
    .col-xs-6.center-block.center-element
      %a{href: '/'}
        = inline_svg 'branding/boostr_logo.svg', class: 'logo'
    .header Resend confirmation instructions
    = form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }) do |f|
      = devise_error_messages!
      .row
        .col-xs-8.center-block.center-element
          %p
            = f.email_field :email, autofocus: true, class:'btn btn-lg btn-info btn-block', placeholder: 'email'
          %p
            = f.submit 'Resend confirmation', class:'btn btn-lg btn-primary btn-block'
    = render "devise/shared/links"
