.row
  #devise-form.col-xs-6.center-block.text-center.center-element
    .col-xs-6.center-block.center-element
      = inline_svg 'branding/boostr_logo.svg', class: 'logo'
    .header Change your password
    = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f|
      = devise_error_messages!
      = f.hidden_field :reset_password_token
      .row
        .col-xs-6.center-block.center-element
          %p
            = f.password_field :password, class:'btn btn-lg btn-info btn-block', placeholder: 'new password', autofocus:true, autocomplete:'off'
          %p
            = f.password_field :password_confirmation, class:'btn btn-lg btn-info btn-block', placeholder: 'confirm new password', autocomplete:'off'
          %p
            = f.submit 'Change my password', class:'btn btn-lg btn-primary btn-block'
    = render "devise/shared/links"
