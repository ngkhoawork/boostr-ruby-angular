.row
  #devise-form.col-xs-6.center-block.text-center.center-element
    .col-xs-6.center-block.center-element
      = inline_svg 'branding/boostr_logo.svg', class: 'logo'
    .header Resenf unlock instructions
    = form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post }) do |f|
      = devise_error_messages!
      .row
        .col-xs-8.center-block.center-element
          %p
            = f.email_field :email, autofocus: true, class:'btn btn-lg btn-info btn-block', placeholder: 'email'
          %p
            = f.submit 'Resend unlock instructions', class:'btn btn-lg btn-primary btn-block'
    = render "devise/shared/links"
