.row
  #devise-form.col-xs-4.center-block.text-center.center-element
    .col-xs-6.center-block.center-element
      %a{href: '/'}
        = inline_svg 'branding/boostr_logo.svg', class: 'logo'
    .header= t 'devise.invitations.edit.header'
    = form_for resource, as: resource_name, url: invitation_path(resource_name), html: { method: :put } do |f|
      = devise_error_messages!
      = f.hidden_field :invitation_token
      .row
        .col-xs-6.center-block.center-element
          %p
            = f.password_field :password, class:'btn btn-lg btn-info btn-block', placeholder: 'password', autofocus:true, autocomplete:'off'
          %p
            = f.password_field :password_confirmation, class:'btn btn-lg btn-info btn-block', placeholder: 'confirm pasword', autocomplete:'off'
          %p
            = f.submit t("devise.invitations.edit.submit_button"), class:'btn btn-lg btn-primary btn-block'
