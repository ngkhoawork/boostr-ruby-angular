#revenue.sales-execution-dashboard
  #nav.transparent
    .container
      .row.filter-section
        .col-xs-4.col-xs-offset-2
          %tree-dropdown{ class:"tree-dropdown team-list", data:"teams", selected:"selectedTeam"}
        .col-xs-4
          %div.member-list{ dropdown: true }
            %a{ href: '', dropdown: { toggle: true } }
              %p{ class: "select" }
                {{ selectedMember.name ? selectedMember.name : "Select Member" }}
            %ul.dropdown-menu.members
              %li{ ng: { repeat: 'member in selectedTeam.members', class: '{active: member.id == selectedMember.id}' } }
                %a{ href: '', ng: { click: 'changeMember(member)' } }
                  {{ member.name }}


  .container-fluid
    .row
      .col-md-4
        .table-wrapper{ ng: { include: "'partials/sales_execution_dashboard/this_quarter.html'" } }
        .table-wrapper{ ng: { include: "'partials/sales_execution_dashboard/upcoming_client_meeting.html'" } }
      .col-md-4
        .table-wrapper{ ng: { include: "'partials/sales_execution_dashboard/kpis.html'" } }
        .table-wrapper{ ng: { include: "'partials/sales_execution_dashboard/largest_open_deals.html'" } }
        .table-wrapper{ ng: { include: "'partials/sales_execution_dashboard/weekly_pipeline_movement.html'" } }
        .table-wrapper{ ng: { include: "'partials/sales_execution_dashboard/pipeline_by_product.html'" } }
      .col-md-4
        .table-wrapper{ ng: { include: "'partials/sales_execution_dashboard/next_quarter.html'" } }
        .table-wrapper{ ng: { include: "'partials/sales_execution_dashboard/deal_loss_summary.html'" } }
        .table-wrapper{ ng: { include: "'partials/sales_execution_dashboard/deal_loss_stages.html'" } }