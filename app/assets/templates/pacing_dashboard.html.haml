										%ul.dropdown-menu
											%li{ ng: { class: '{active: !filter.team.id}' } }
												%a{ href: '', ng: { click: 'setFilter("team", defaultFilter.team)' } }
													{{defaultFilter.team.name}}
											%li{ ng: { repeat: 'team in teams | orderBy : "name"', class: '{active: team.id === filter.team.id}' } }
												%a{ href: '', ng: { click: 'setFilter("team", team)' } }
													{{team.name}}
				.header-cell.filters-block
					%table
						%tr.filter-title
							%td Seller
						%tr
							%td
								%ul.filter-item
									%li{ dropdown: true }
										%a{href: '', dropdown: { toggle: true }, 'ng-class': '{"empty": !filter.seller.id}' }
											{{filter.seller.name}}
											%span.caret
										%ul.dropdown-menu
											%li{ ng: { class: '{active: !filter.seller.id}' } }
												%a{ href: '', ng: { click: 'setFilter("seller", defaultFilter.seller)' } }
													{{defaultFilter.seller.name}}
											%li{ ng: { repeat: 'seller in sellers | orderBy : "name"', class: '{active: seller.id === filter.seller.id}' } }
												%a{ href: '', ng: { click: 'setFilter("seller", seller)' } }
													{{seller.name}}

				.header-cell.filters-block
					%table
						%tr.filter-title
							%td Product
						%tr
							%td
								%ul.filter-item
									%li{ dropdown: true }
										%a{href: '', dropdown: { toggle: true }, 'ng-class': '{"empty": !filter.product.id}' }
											{{filter.product.name}}
											%span.caret
										%ul.dropdown-menu
											%li{ ng: { class: '{active: !filter.product.id}' } }
												%a{ href: '', ng: { click: 'setFilter("product", defaultFilter.product)' } }
													{{defaultFilter.product.name}}
											%li{ ng: { repeat: 'product in products | orderBy : "name"', class: '{active: product.id === filter.product.id}' } }
												%a{ href: '', ng: { click: 'setFilter("product", product)' } }
													{{product.name}}

		.row
			.col-xs-6.pl0
				.block
					%div.mb20
						%span.title New Deal/RFP Pacing
					%div#activity-new-chart-container
						%svg#activity-new-chart.pacing-chart
						%div.legend-container
			.col-xs-6.pr0
				.block
					%div.mb20
						%span.title Weekly Won Revenue Pacing
					%div#activity-won-chart-container
						%svg#activity-won-chart.pacing-chart
						%div.legend-container
		.row.mb20
			.block
				%div.mb20
					%span.title Activity Pacing
				%table.table.table-hover
					%tbody
						%tr.header-row
							%th
								%b New Deals #
							%th{'ng-repeat': 'week in dealWeeks'} Week {{week}}
					%tbody{'ng-show': 'pipelineRevenue.weighted_pipeline'}
						%tr
							%td This Qtr
							%td{'ng-repeat': 'val in newDeals.current_quarter track by $index'}
								{{val}}
						%tr
							%td Last Qtr
							%td{'ng-repeat': 'val in newDeals.previous_quarter track by $index'}
								{{val}}
						%tr
							%td YoY
							%td{'ng-repeat': 'val in newDeals.previous_year_quarter track by $index'}
								{{val}}

					%tbody
						%tr.header-row
							%th
								%b Won Deals
							%th{'ng-repeat': 'week in dealWeeks'} Week {{week}}
					%tbody{'ng-show': 'pipelineRevenue.revenue'}
						%tr
							%td This Qtr
							%td{'ng-repeat': 'val in wonDeals.current_quarter track by $index'}
								{{val | currency: '$' : '0'}}
						%tr
							%td Last Qtr
							%td{'ng-repeat': 'val in wonDeals.previous_quarter track by $index'}
								{{val | currency: '$' : '0'}}
						%tr
							%td YoY
							%td{'ng-repeat': 'val in wonDeals.previous_year_quarter track by $index'}
								{{val | currency: '$' : '0'}}