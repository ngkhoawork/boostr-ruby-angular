#revenue
  .container
    .row
      .col-xs-12
        %h3
          Revenue
        .search
          %form
            .input-group
              .input-group-addon
                %i.glyphicon.glyphicon-search
              %input.form-control{ ng: { model: 'query', change: 'search(query)' }, placeholder: "Search by Advertiser, Agency, Name" }

    .row
      .col-md-12
        .navbar.navbar-white
          %ul.nav.navbar-nav
            %li{ ng: { class: "{ active: isActiveTab('ios') }" } }
              %a{ href: "javascript:void(0);", ng: { click: 'setActiveTab("ios")'} }
                IOs
            %li{ ng: { class: "{ active: isActiveTab('programmatic') }" } }
              %a{ href: "javascript:void(0);", ng: { click: 'setActiveTab("programmatic")'} }
                Programmatic
        .table-wrapper
          %table.table.table-hover.table-striped
            %thead
              %tr
                %th.left IO #
                %th.left External #
                %th.left Name
                %th.left Advertiser
                %th.left Agency
                %th.right Budget
                %th.left Start Date
                %th.left End Date
                %th.left Deal Name
                %th.right

            %tbody
              %tr{ ng: { repeat: 'row in revenue | filter:searchText', click: 'go("/ios/" + row.id)' } }
                %td.left {{row.io_number}}
                %td.left {{row.external_io_number}}
                %td.left {{row.name}}
                %td.left {{row.advertiser.name}}
                %td.left {{row.agency.name}}
                %td.right {{row.budget | currency:'$':0 }}
                %td.left {{row.start_date | date: 'M/d/yyyy'}}
                %td.left {{row.end_date | date: 'M/d/yyyy'}}
                %td.left Active
                %td.right
                  %i.fa.fa-angle-right

