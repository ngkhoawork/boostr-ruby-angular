#stages
  #nav.transparent
    .container
      .row
        .col-xs-12
          %ul.nav.nav-tabs
            %li.pull-right.last
              %a.add-stage{ href: '', ng: { click: 'showModal()' } }
                = inline_svg 'icons/add.svg'
                Add Stage

  .container
    .row
      .col-xs-12
        %h3
          Stages

        .table-wrapper
          %table.table.table-hover.table-striped
            %thead
              %tr
                %th.left Name
                %th.right Probability
                %th.left Open/Closed
                %th.left Active
                %th.action-column
            %tbody{ 'ui-sortable': 'sortableOptions', ng: { model: 'stages' } }
              %tr{ ng: { repeat: 'row in stages' } }
                %td {{ row.name }}
                %td.right {{ row.probability }}%
                %td {{ row.open ? 'Open' : 'Closed' }}
                %td {{ row.active ? 'Active' : 'Archived' }}
                / %td.action-column.info-td
                /   .empty
                %td.action-td
                  %a.edit-stage{ href: '', ng: { click: 'edit(row)' } }
                    = inline_svg 'icons/pencil.svg'

