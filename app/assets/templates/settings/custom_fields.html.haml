    .row
      .col-xs-12
        .table-wrapper
          %table.table.table-hover.table-striped
            %thead
              %tr
                %th.left Position
                %th.left Name
                %th.left Type
                %th.left Required
                %th.left Show on Modal
                %th.action-column
            %tbody
              %tr{ ng: { repeat: 'dealCustomFieldName in dealCustomFieldNames' } }
                %td.left
                  {{ dealCustomFieldName.position }}
                %td.left
                  {{ dealCustomFieldName.field_label }}
                %td.left
                  {{ dealCustomFieldName.field_type }}
                %td.left
                  {{ dealCustomFieldName.is_required ? "Yes" : "No" }}
                %td.left
                  {{ dealCustomFieldName.show_on_modal ? "Yes" : "No" }}
                %td.action-td
                  %a.edit-team{ href: '', ng: { click: 'editModal(dealCustomFieldName)' } }
                    = inline_svg 'icons/pencil.svg'
                  %a.delete-team{ href: '', ng: { click: 'delete(dealCustomFieldName)' } }
                    = inline_svg 'icons/trash.svg'

