#team
  #nav.transparent
    .container
      .row
        .col-xs-12
          %ul.nav.nav-tabs
            %li.pull-left.path
              %a.path-link{ href: '/settings/teams'} Teams
              %div.path-link{ ng: { if: 'currentTeam.parent' } }
                %a{ href: '/settings/teams/{{currentTeam.parent_id}}'} {{currentTeam.parent.name}}
            %li.pull-right.last
              %a.add-team{ href: '', ng: { click: 'showModal()' } }
                = inline_svg 'icons/add.svg'
                Add Team

  .container
    .row
      .col-xs-12
        %h3 {{ currentTeam.name }}

        .table-wrapper
          %table.table.table-hover.table-striped
            %thead
              %tr
                %th Team/Members
                %th Team Lead
                %th.text-center Members
            %tbody
              %tr{ ng: { repeat: 'team in currentTeam.children', click: 'go("settings/teams/" + team.id)' } }
                %td
                  {{ team.name }}
                  = inline_svg 'icons/folder.svg', class: 'svg pull-left'
                %td {{ team.leader_name }}
                %td.text-center {{ team.members_count }}
              %tr{ ng: { repeat: 'member in currentTeam.members' } }
                %td
                  {{ member.first_name }} {{ member.last_name }}
                  = inline_svg 'icons/profile.svg', class: 'svg pull-left'
                %td --
                %td.text-center --
