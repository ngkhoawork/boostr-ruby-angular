    .row
      .col-md-12.text-center
        .alerts{ 'ng-if': 'notification' }
          .alert.alert-success
            %i.fa.fa-check-circle
            <strong style="text-transform: capitalize"></strong>
            {{notification}}
        %table.table
          %thead
            %tr
              %th Business Plan name
              %th Time period
              %th # of clients
              %th Date Created
              %th Due Date
              %th Status
          %tbody
            %tr{ ng: { if: 'bps.length > 0', repeat: 'bp in bps' }}
              %td
                {{bp.name}}
              %td
                {{bp.time_period.name}}
              %td
                {{bp.client_count}}
              %td
                {{bp.created_at | date: 'shortDate'}}
              %td
                {{bp.due_date | date: 'shortDate'}}
              %td
                {{bp.status}} / {{bp.client_count}}
            %tr{ ng: { if: 'bps.length == 0' }}
              %td.center{ colspan: '6' }
                No data available