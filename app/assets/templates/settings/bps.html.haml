.bp-detail
  .container.table-report
    .row
      .col-xs-12
        .section
          %a.pull-right.upload{ href: '', ng: { click: 'showModal()' } }
            = inline_svg 'icons/add.svg'
        %h3.title Business Plans

    .row
      .col-md-12.text-center.bp-table-wrapper
        .alerts{ 'ng-if': 'notification' }
          .alert.alert-success
            %i.fa.fa-check-circle
            <strong style="text-transform: capitalize"></strong>
            {{notification}}
        %table.table.bp-table
          %thead
            %tr
              %th.left Business Plan name
              %th Time period
              %th Date Created
              %th Due Date
              %th Status
              %th Active
              %th
          %tbody
            %tr.clickable{ ng: { if: 'bps.length > 0', repeat: 'bp in bps', click: 'go($event, bp)' } }
              %td.left
                {{bp.name}}
              %td
                {{bp.time_period.name}}
              %td
                {{bp.created_at | date: 'shortDate'}}
              %td
                {{bp.due_date | date: 'shortDate'}}
              %td
                {{bp.status}} / {{bp.client_count}}
              %td
                .action
                  .show-hide-remainder-form
                    .switch-active-form
                      %input.cmn-toggle.cmn-toggle-round-flat{type: 'checkbox', 'ng-model': 'bp.active', 'ng-change': "activateBp(bp)", id: "active-modal-toggle{{bp.id}}"}
                      %label{:for => "active-modal-toggle{{bp.id}}"}
                        %span
              %td{width: '100px'}
                %i.fa.fa-trash.delete-icon{'ng-click': 'deleteBp(bp)'}
            %tr{ ng: { if: 'bps.length == 0' }}
              %td.center{ colspan: '6' }
                No data available