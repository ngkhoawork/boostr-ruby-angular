#egnyte.z-detail-page.z-styles
  .container-fluid
    .row
      .col-xs-6
        .mb20
          .header-item
            .main-title
              Egnyte
        .block
          %div{'ng-if': '!egnyteSettings.access_token'}
            %form{ ng: { submit: 'submitForm()' } }
              %button.btn.btn-primary.btn-lg{ type: 'submit' }
                Connect Account
          %div.connected-block{'ng-if': 'egnyteSettings.access_token'}
            .row
              .col-xs-2
                %z-toggle{'ng-model': 'egnyteSettings.connected', 'ng-change': 'disconnectEgnyte(egnyteSettings)'}
              .col-xs-10
                %p.disconnect.right{'ng-click': 'removeEgnyte(egnyteSettings)'}
                  Disconnect Account
  %div{'ng-if': 'egnyteSettings.access_token'}
    .container-fluid{"ng-controller": "EgnyteFolderController"}
      .row
        .col-xs-6
          .mb20
          .egnyte-header
            .header-item
              .main-title
                Structure
            .header-item{'ng-if': 'showParentButton'}
              %add-button{'ng-click': 'createFolder("parent")'}
                {{click}}
                Add Parent Folder
            .header-item{'ng-if': 'showSubButton'}
              %add-button{'ng-click': 'createFolder("sub")'}
                Add Sub Folder
          .tree
            %tree{'src': "folders"}


