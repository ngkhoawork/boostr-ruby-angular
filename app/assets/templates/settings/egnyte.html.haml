#egnyte.z-detail-page.z-styles
  .container-fluid
    .row
      .col-xs-6
        .mb20
          .header-item
            .main-title
              Egnyte
        .block
          %div{'ng-if': '!company.egnyte_access_token'}
            %form{ ng: { submit: 'submitForm()' } }
              %button.btn.btn-primary.btn-lg{ type: 'submit' }
                Connect Account
          %div.connected-block{'ng-if': 'company.egnyte_access_token'}
            .row
              .col-xs-2
                %z-toggle{'ng-model': 'company.egnyte_connected', 'ng-change': 'updateEgnyte("disable", company)'}
              .col-xs-10
                %p.disconnect.right{'ng-click': 'updateEgnyte("disconnect", company)'}
                  Disconnect Account





