#stages
  #nav.transparent
    .container
      .row
        .col-xs-12
          %ul.nav.nav-tabs

  .container
    .row
      .col-xs-12
        %h3
          Notifications

        .table-wrapper
          %table.table.table-hover.table-striped
            %thead
              %tr
                %th.left Name
                %th.action-column
            %tbody{ 'ui-sortable': 'sortableOptions', ng: { model: 'notifications' } }
              %tr{ ng: { repeat: 'row in notifications | orderBy: "[name]"' } }
                %td {{ row.name }}
                %td.action-column.info-td
                  .empty
                %td.action-td
                  %a.edit-stage{ href: '', ng: { click: 'editModal(row)' } }
                    = inline_svg 'icons/pencil.svg'
