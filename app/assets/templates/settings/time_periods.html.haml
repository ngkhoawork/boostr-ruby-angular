#time-periods
  #nav.transparent
    .container
      .row
        .col-xs-12
          %ul.nav.nav-tabs
            %li.pull-right.last
              %a.add-time-period{ href: '', ng: { click: 'showModal()' } }
                = inline_svg 'icons/add.svg'
                Add Time Period

  .container
    .row
      .col-xs-12
        %h3
          Time Periods

        .table-wrapper
          %table.table.table-hover.table-striped
            %thead
              %tr
                %th.left Name
                %th.right Start Date
                %th.right End Date
                %th.action-column
            %tbody
              %tr{ ng: { repeat: 'row in time_periods | orderBy: "start_date"', click: 'editModal(row)'  } }
                %td.left {{ row.name }}
                %td.right {{ row.start_date | date: 'shortDate' }}
                %td.right {{ row.end_date | date: 'shortDate' }}
                %td.action-column.info-td
                  .empty
                %td.action-td
                  %a.edit-time-period{ href: '', ng: { click: 'editModal(row); $event.stopPropagation()' } }
                    = inline_svg 'icons/pencil.svg'
                  %a.delete-time-period{ href: '', ng: { click: 'delete(row); $event.stopPropagation()' } }
                    = inline_svg 'icons/trash.svg'

