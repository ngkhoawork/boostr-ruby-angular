#reports
  #nav.transparent
    .container
      .row
        .col-xs-12
          %ul.nav.nav-tabs
            %li.quota-period{ dropdown: true }
              %a{ href: '', dropdown: { toggle: true } }
                %span{ ng: { if: 'year' } }
                  {{ year }} Quarterly
                %span{ ng: { if: '!year && currentTimePeriod' } }
                  {{ currentTimePeriod.name }} ({{ currentTimePeriod.start_date | date: 'shortDate'}} - {{ currentTimePeriod.end_date | date: 'shortDate' }})
                %span.caret
              %ul.dropdown-menu.time-periods
                %li{ ng: { repeat: 'timePeriod in timePeriods', class: '{active: !year && timePeriod.id == currentTimePeriod.id}' } }
                  %a{ href: '', ng: { click: 'updateTimePeriod(timePeriod)' } }
                    {{ timePeriod.name }} ({{ timePeriod.start_date | date: 'shortDate'}} - {{ timePeriod.end_date | date: 'shortDate' }})
                %li{ ng: { repeat: 'y in years', class: '{active: year == y}' } }
                  %a{ href: '', ng: { click: 'updateYear(y)' } }
                    {{ y }} Quarterly

  .container
    .row
      .col-xs-12
        %h3
          Sellers Activities

    .row
      .col-md-12
        .table-wrapper
          %table.table.table-hover.table-striped
            %thead
              %tr
                %th.left Name
                %th.left {{ types[0].name }}
                %th.left {{ types[1].name }}
                %th.left {{ types[2].name }}
                %th.left {{ types[3].name }}
                %th.left {{ types[4].name }}
                %th.left {{ types[5].name }}
                %th.left {{ types[6].name }}
                %th.left {{ types[7].name }}
                %th.left {{ types[8].name }}
                %th.left Total

            %tbody
              %tr{ ng: { repeat: 'user in users | orderBy: "name"' } }
                %td.left {{ user.name }}
                %td.right {{ user.currentReportValues[0] }}
                %td.right {{ user.currentReportValues[1] }}
                %td.right {{ user.currentReportValues[2] }}
                %td.right {{ user.currentReportValues[3] }}
                %td.right {{ user.currentReportValues[4] }}
                %td.right {{ user.currentReportValues[5] }}
                %td.right {{ user.currentReportValues[6] }}
                %td.right {{ user.currentReportValues[7] }}
                %td.right {{ user.currentReportValues[8] }}
                %td.right {{ user.currentReportValues[9] }}
              %tr
                %td.left Total
                %td.right {{ company.currentReportValues[0] }}
                %td.right {{ company.currentReportValues[1] }}
                %td.right {{ company.currentReportValues[2] }}
                %td.right {{ company.currentReportValues[3] }}
                %td.right {{ company.currentReportValues[4] }}
                %td.right {{ company.currentReportValues[5] }}
                %td.right {{ company.currentReportValues[6] }}
                %td.right {{ company.currentReportValues[7] }}
                %td.right {{ company.currentReportValues[8] }}
                %td.right {{ company.currentReportValues[9] }}
