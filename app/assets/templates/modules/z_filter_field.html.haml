%div.z-filter-field{'ng-switch': 'type'}
	%div.field-name
		.element-to-replace
	-#DEFAULT FIELD
	%div.field-value{'ng-switch-when': 'list'}
		%div{dropdown: true}
			%div{'dropdown-toggle': true, 'ng-class': '{"empty": !selected.id}' }
				{{selected.name}}
				%span.caret
			%div.dropdown-menu
				%div{'ng-if': 'isAll'}
					%span{'ng-click': 'setFilter(emptyFilter)', 'ng-class': '{active: !selected.id}'}
						{{emptyFilter.name}}
				%div{ng: {repeat: 'item in data | orderBy : "name"'}}
					%span{'ng-click': 'setFilter(item)', 'ng-class': '{active: item.id === selected.id}'}
						{{item.name}}
	-#TEAM FIELD
	%div.field-value{'ng-switch-when': 'team'}
		%div{dropdown: true}
			%div{'dropdown-toggle': true, 'ng-class': '{"empty": !selected.id}' }
				{{selected.name}}
				%span.caret
			%div.dropdown-menu
				%div{'ng-if': 'isAll'}
					%span{'ng-click': 'setFilter(emptyFilter)', 'ng-class': '{active: !selected.id}'}
						{{emptyFilter.name}}
				%div{ng: {repeat: 'item in data | orderBy : "name"', include: '"modules/z_filter_field_row.html"'}}

	-#DATERANGE FIELD
	%div.field-value{'ng-switch-when': 'daterange'}
		.date-picker-wrap
			%div.date-picker{'date-range-picker': true,
							   'ng-model': 'selected.date',
							   :options => "{locale: {format: 'MMMM D, YYYY'},
											 eventHandlers: {'apply.daterangepicker': datePicker.apply}}"}
				%span.empty{'ng-hide': 'selected.dateString'}
					Time period
					%span.caret
				%span{'ng-show': 'selected.dateString'}
					{{selected.dateString}}
					%span.caret
	-#STAGE FIELD
	%div.field-value{'ng-switch-when': 'stage'}
		%div{ dropdown: true }
			%div{'dropdown-toggle': true, 'ng-class': '{"empty": selected.length == 0}' }
				%span{'ng-if': '!selected.length'}
					All
				%span{'ng-if': 'selected.length', 'ng-repeat': 'stage in selected'}
					{{stage.name}} {{stage.probability + '%'}}
					%i.fa.fa-times.close-btn{'ng-click': 'removeFilter(stage)'}
				%span.caret
			%div.dropdown-menu
				%div{'ng-if': 'isAll'}
					%span{'ng-click': 'setFilter(null)', 'ng-class': '{active: !selected.length}'}
						{{emptyFilter.name}}
				%div{ng: { repeat: 'stage in data | orderBy: ["-open", "probability"]'}}
					%span{ng: { click: 'setFilter(stage)', class: '{active: isStageSelected(stage.id)}'}}
						{{stage.name}} {{isFinite(stage.probability) ? stage.probability + '%' : ''}}