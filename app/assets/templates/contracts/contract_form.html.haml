#contract_modal.popup-modal
    %form{ng: {submit: 'submitForm()'}}
        .popup-modal-header
            {{formType}} Contract
            %span.close-btn{'ng-click': 'cancel()'}
        .popup-modal-body
            %h4.mb20 Contract Details
            .form-row
                .row-w70.pr16
                    .form-group{'ng-class':'{error: errors.name}'}
                        %span.error-text {{errors.name}}
                        %label Contract Name
                        %span.star *
                        %input.form-control{placeholder: 'Name', ng: {model: 'form.name'}}
                .row-w30.toggle-wrap
                    %z-toggle{ng: {model: 'form.toggle'}}
                    %span Restricted
            .form-row
                .row-w35.pr16
                    .form-group{'ng-class':'{error: errors.type}'}
                        %span.error-text {{errors.type}}
                        %label Type
                        %span.star *
                        %input.form-control{placeholder: 'Type', ng: {model: 'form.type'}}
                .row-w35.pr16
                    .form-group
                        %label Status
                        %input.form-control{placeholder: 'Status', ng: {model: 'form.status'}}
                .row-w30.toggle-wrap
                    %z-toggle{ng: {model: 'form.toggle'}}
                    %span Auto Renew
            .form-row
                .row-w33.date.pr16
                    .form-group{'ng-class':'{error: errors.startDate}'}
                        %span.error-text {{errors.startDate}}
                        %label Start Date
                        .input-group
                            %span.input-group-addon
                                %i.fa.fa-calendar
                            %span.bs-datepicker
                                %input.form-control.box.w4{readonly: true, placeholder: 'Pick date', datepicker: {popup: 'MMMM d, y'}, ng: {model: 'form.startDate', click: 'startDateOpened = true'}, 'is-open': 'startDateOpened'}
                .row-w33.date.pr16
                    .form-group{'ng-class':'{error: errors.endDate}'}
                        %span.error-text {{errors.endDate}}
                        %label End Date
                        .input-group
                            %span.input-group-addon
                                %i.fa.fa-calendar
                            %span.bs-datepicker
                                %input.form-control.box.w4{readonly: true, placeholder: 'Pick date', datepicker: {popup: 'MMMM d, y'}, ng: {model: 'form.endDate', click: 'endDateOpened = true'}, 'is-open': 'endDateOpened'}

                .row-w33.toggle-wrap
                    %z-toggle{ng: {model: 'form.toggle'}}
                    %span Auto Notifications

            .form-row
                .row-w35.pr16
                    .form-group
                        %label Currency
                        %input.form-control{placeholder: 'USD', ng: {model: 'form.cur'}}
                .row-w35.pr16
                    .form-group
                        %label Amount
                        %input.form-control{placeholder: 'Amount', ng: {model: 'form.amount'}}

            .form-group
                %label Description
                %textarea.form-control{'msd-elastic': '', placeholder: 'Description', ng: {model: 'form.desc'}}

            .mb30
            %h4.mb20 Account Details
            .form-row
                .row-w50.pr8
                    .form-group
                        %label Deal
                        %input.form-control{'placeholder': 'Search for Deal', 'ng-model': 'form.deal', 'ng-model-options': '{debounce: 400}', typeahead: 'item as item.formatted_name for item in searchDeals($viewValue)'}
                .row-w50.pl8
                    .form-group
                        %label Publisher
                        %input.form-control{'placeholder': 'Search for Publisher', 'ng-model': 'form.publisher', 'ng-model-options': '{debounce: 400}', typeahead: 'item as item.formatted_name for item in searchPublishers($viewValue)'}
            .form-row
                .row-w50.pr8
                    .form-group
                        %label Advertiser
                        %input.form-control{'placeholder': 'Search for Advertiser', 'ng-model': 'form.advertiser', 'ng-model-options': '{debounce: 400}', typeahead: 'item as item.formatted_name for item in searchAccounts("advertiser", $viewValue)'}
                .row-w50.pl8
                    .form-group
                        %label Agency
                        %input.form-control{'placeholder': 'Search for Agency', 'ng-model': 'form.agency', 'ng-model-options': '{debounce: 400}', typeahead: 'item as item.formatted_name for item in searchAccounts("agency", $viewValue)'}
        .popup-modal-footer
            %button.btn.btn-default{type: 'button', 'ng-click': 'cancel()'} Cancel
            %button.btn.btn-primary{type: 'submit'} {{submitText}}
