.block#line-content-fees
  %div.mb20
    %span.title PMP Actuals

  .table-wrapper
    %table.table.table-hover
      %thead
        %tr
          %th.left Date
          %th.center Deal-ID
          %th.center Ad Unit/Product
          %th.right Bids
          %th.right Impressions
          %th.right Win Rate
          %th.right eCPM
          %th.right Revenue
      %tbody{infinite: {scroll: 'loadMoreData()', 'scroll-disabled': 'isLoading || allDataLoaded', 'scroll-distance': '0.5'}}
        %tr{ ng: { repeat: "pmpItemDailyActual in pmpItemDailyActuals"} }
          %td.left
            {{ pmpItemDailyActual.date | date: 'M/d/yyyy' }}
          %td.center
            {{ pmpItemDailyActual.ssp_deal_id }}
          %td.center
            %strong
              {{ pmpItemDailyActual.ad_unit }}
          %td.right
            {{ pmpItemDailyActual.bids | number:0 }}
          %td.right
            {{ pmpItemDailyActual.impressions | number:0 }}
          %td.right
            {{ pmpItemDailyActual.win_rate | percentage:0 }}
          %td.right
            {{ pmpItemDailyActual.price | currency:currency_symbol:2 }}
          %td.right
            {{ pmpItemDailyActual.revenue_loc | currency:currency_symbol:2 }}
        %tr{ ng: { if: '!pmpItemDailyActuals || pmpItemDailyActuals.length == 0' } }
          %td.center{ 'colspan': '8' }
            No data available. Please import data in 
            %a{'href': '', 'ng-href': '/settings/data_import'} Settings/Data Import