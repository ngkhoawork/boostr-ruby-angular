.block.detail-stats
  %div.stats-body
    %div.mb30
      %span.title PMP Name

    .clearfix
    %div.stats-numbers.mb30
      %div.stats-col
        .col-body-wrap
          .col-body
            .description Budget
            .title {{currentPMP.budget_loc | currency:currency_symbol:0 }}
            .subtitle{'ng-if': 'currentPMP.curr_cd != "USD"'} {{currentPMP.budget | currency: '$' : 0}}

      %div.stats-col
        .col-body-wrap
          .col-body
            .description Delivered
            .title {{currentPMP.budget_delivered | currency:currency_symbol:0 }}
            .subtitle{'ng-if': 'currentPMP.curr_cd != "USD"'} {{currentPMP.budget | currency: '$' : 0}}
      %div.stats-col
        .col-body-wrap
          .col-body
            .description Remaining
            .title {{currentPMP.budget_remaining | currency:currency_symbol:0 }}
            .subtitle{'ng-if': 'currentPMP.curr_cd != "USD"'} {{currentPMP.budget | currency: '$' : 0}}
      %div.stats-col
        .col-body-wrap
          .col-body
            .description Advertiser
            .title {{currentPMP.advertiser.name}}
      %div.stats-col
        .col-body-wrap
          .col-body
            .description Agency
            .title {{currentPMP.agency.name}}
      %div.stats-col
        .col-body-wrap
          .col-body
            .description Start
            .title {{currentPMP.start_date | date: 'M/d/yyyy'}}
      %div.stats-col
        .col-body-wrap
          .col-body
            .description End
            .title {{currentPMP.end_date | date: 'M/d/yyyy'}}
  
    .clearfix
    
    .table-wrapper
      %table.table.table-hover
        %thead
          %tr
            %th.left Deal ID
            %th.left SSP
            %th.left Budget
            %th.left Delivered
            %th.left Remaining
            %th.right 7 Day Run Rate
            %th.right 30 Day Run Rate
        %tbody
          %tr{ ng: { if: 'currentPMP.pmp_items && currentPMP.pmp_items.length > 0', repeat: "pmpItem in currentPMP.pmp_items | orderBy: 'deal_id'"} }
            %td.left
              {{ pmpItem.ssp_deal_id }}
            %td.left
              %strong
                {{ pmpItem.ssp.name }}
            %td.left
              {{ pmpItem.budget_loc | currency:currency_symbol:0 }}
            %td.left
              {{ pmpItem.budget_delivered_loc | currency:currency_symbol:0 }}
            %td.left
              {{ pmpItem.budget_remaining_loc | currency:currency_symbol:0 }}
            %td.left
              {{ pmpItem.sevenDayRunRate }}
            %td.left
              {{ pmpItem.thirtyDayRunRate }}
                    