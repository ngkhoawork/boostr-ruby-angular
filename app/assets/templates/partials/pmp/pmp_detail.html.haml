.block.detail-stats
  %div.stats-body
    %div.mb30
      %span.title {{currentPMP.name}}

    .clearfix
    %div.stats-numbers.mb30
      %div.stats-col
        .col-body-wrap
          .col-body
            .description Budget
            .title {{currentPMP.budget_loc | currency:currency_symbol:0 }}
            .subtitle{'ng-if': 'currentPMP.currency.curr_cd != "USD"'} {{currentPMP.budget | currency: '$' : 0}}

      %div.stats-col
        .col-body-wrap
          .col-body
            .description Delivered
            .title {{currentPMP.budget_delivered_loc | currency:currency_symbol:0 }}
            .subtitle{'ng-if': 'currentPMP.currency.curr_cd != "USD"'} {{currentPMP.budget_delivered | currency: '$' : 0}}
      %div.stats-col
        .col-body-wrap
          .col-body
            .description Remaining
            .title {{currentPMP.budget_remaining_loc | currency:currency_symbol:0 }}
            .subtitle{'ng-if': 'currentPMP.currency.curr_cd != "USD"'} {{currentPMP.budget_remaining | currency: '$' : 0}}
      %div.stats-col
        .col-body-wrap
          .col-body
            .description Advertiser
            .title {{currentPMP.advertiser.name}}
      %div.stats-col
        .col-body-wrap
          .col-body
            .description Agency
            .title {{currentPMP.agency.name}}
      %div.stats-col
        .col-body-wrap
          .col-body
            .description Start
            .title {{currentPMP.start_date | date: 'M/d/yyyy'}}
      %div.stats-col
        .col-body-wrap
          .col-body
            .description End
            .title {{currentPMP.end_date | date: 'M/d/yyyy'}}
  
    .clearfix