.block
  %div.mb20
    %span.title Contacts
    %add-button{'ng-click': 'addContact()'} Add

  %table.table.table-striped.contact-table
    %thead
      %tr
        %th.left Name
        %th.left Advertiser
        %th.left Email
        %th.left Phone
        %th.center Last Touch
      %tbody
        %tr{ ng: { repeat: 'contact in contacts'} }
          %td
            %a{'ng-href': '/contacts/{{contact.id}}', target: "_blank"}
              {{contact.name}}
            %i.fa.fa-trash.publisher-delete-icon{'ng-click': 'deleteContact(contact)'}
          %td
            %a{'ng-href': '/accounts/{{contact.client.id}}', target: "_blank"}
              {{contact.client.name}}
          %td {{contact.email}}
          %td {{contact.phone}}
          %td.center {{contact.activity_updated_at  | date : 'shortDate'}}