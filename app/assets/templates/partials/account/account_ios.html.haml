.deals.block
    %div.mb20
        %span.title IOs
        -#%add-button{'ng-click': 'showNewDealModal()'} Add

    %table.table.table-striped
        %thead
            %tr
                %th.left Name
                %th.left Advertiser
                %th.left Budget
                %th.left Start Date
                %th.left End Date
        %tbody
            %tr{ ng: { repeat: 'io in currentClient.ios'} }
                %td
                    {{ io.name }}
                %td
                    {{ io.advertiser.name }}
                %td
                    {{ io.budget | currency:'$':0  }}
                %td
                    {{ io.start_date }}
                %td
                    {{ io.end_date }}