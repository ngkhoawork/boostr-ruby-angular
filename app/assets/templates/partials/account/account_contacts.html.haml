.contacts.block
    %div.mb20
        %span.title Contacts
        %add-button{'ng-click': 'createNewContactModal()'} Add

    %table.table.table-striped
        %thead
            %tr
                %th.left Name
                %th.left Position
                %th.left Email
                %th.left Role
        %tbody
            %tr{ ng: { repeat: 'client_contact in currentClient.contacts'} }
                %td
                    %a{'ng-href': '/contacts/{{client_contact.id}}'} {{ client_contact.name }}
                    %i.fa.fa-pencil.edit-deal{'ng-click': 'showEditContactModal(client_contact)'}
                %td
                    {{ client_contact.position }}
                %td
                    {{ client_contact.address.email }}
                %td
                    {{ client_contact.role }}