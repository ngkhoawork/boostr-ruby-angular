%h3
  This Quarter - {{dataQuaterForecast[0].new_deals_needed}} Deals Needed
%nvd3{ options:'optionsQuarterForecast[0]', data: 'dataQuaterForecast[0].graphData', callback:"initLabels()", class: 'quarter-forecast-chart quarter-forecast-chart1', ng: {if: 'dataQuaterForecast[0]'}}
%table.table.table-hover.table-striped
  %thead
    %tr
      %th.left Quota
      %th.left Weighted Pipe
      %th.left Revenue
      %th.left Forecast
      %th.left % Quota
      %th.right # Deals Needed
  %tbody{ng: {if: "dataQuaterForecast[0]"}}
    %tr
      %td.left {{dataQuaterForecast[0].quota | currency: '$' : 0}}
      %td.left {{dataQuaterForecast[0].weighted_pipeline | currency: '$' : 0}}
      %td.left {{dataQuaterForecast[0].revenue | currency: '$' : 0}}
      %td.left {{(dataQuaterForecast[0].weighted_pipeline + dataQuaterForecast[0].revenue) | currency: '$' : 0}}
      %td.left {{dataQuaterForecast[0].percent_to_quota.toFixed(0)}}%
      %td.right {{dataQuaterForecast[0].new_deals_needed}}