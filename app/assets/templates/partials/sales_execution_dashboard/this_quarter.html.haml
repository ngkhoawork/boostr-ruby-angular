%h3
  This Quarter - {{dataQuaterForecast[0].new_deals_needed}} Deals Needed
%hr{width: '100%'}
%nvd3{ options:'optionsQuarterForecast[0]', data: 'dataQuaterForecast[0].graphData', callback:"initLabels()", class: 'quarter-forecast-chart quarter-forecast-chart1', ng: {if: 'dataQuaterForecast[0]'}}
%hr{width: '100%'}
%table.table.table-hover.table-striped.table-large
  %tbody
    %tr{ng: {if: "dataQuaterForecast[0]"}}
      %td.center
        %div.label Quota
        %div
          {{dataQuaterForecast[0].quota | currency: '$' : 0}}
      %td.center
        %div.label Weighted Pipe
        %div
          {{dataQuaterForecast[0].weighted_pipeline | currency: '$' : 0}}
      %td.center
        %div.label Revenue
        %div
          {{dataQuaterForecast[0].revenue | currency: '$' : 0}}
    %tr{ng: {if: "dataQuaterForecast[0]"}}
      %td.center
        %div.label Forecast
        %div
          {{(dataQuaterForecast[0].weighted_pipeline + dataQuaterForecast[0].revenue) | currency: '$' : 0}}
      %td.center
        %div.label % Quota
        %div
          {{dataQuaterForecast[0].percent_to_quota.toFixed(0)}}%
      %td.center
        %div.label # Deals Needed
        %div
          {{dataQuaterForecast[0].new_deals_needed}}