%h3
  Upcoming Client Meetings
%table.table.table-hover.table-striped
  %thead
    %tr
      %th.left{ width: '100' }
        Date
      %th.left Client
      %th.left Deal
      %th.left Type
      %th.left Attendees
      %th.left Notes
  %tbody
    %tr{ 'ng-repeat': 'activity in topActivities' }
      %td.left{ width: '100' }
        {{activity.happened_at | date:'MM-dd-yyyy'}}
      %td.left {{activity.client.name}}
      %td.left {{activity.deal.name}}
      %td.left {{activity.activity_type_name}}
      %td.left
        %div{'ng-repeat': 'contact in activity.contacts'}
          {{contact.name}}
      %td.left {{activity.comment}}