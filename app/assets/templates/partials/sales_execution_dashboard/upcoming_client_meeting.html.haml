%h3
  Upcoming Account Meetings
%hr{width: '100%'}
%table.table.table-hover.table-striped
  %thead
    %tr
      %th.left
        Date
      %th.left Account
      %th.left Type
      %th.left Attendees
  %tbody
    %tr{ 'ng-repeat': 'activity in topActivities', 'tooltip': '{{activity.comment}}', 'tooltip-placement': 'left'  }
      %td.left
        {{activity.happened_at | date:'MM-dd-yyyy'}}
      %td.left {{activity.client.name}}
      %td.left {{activity.activity_type_name}}
      %td.left
        %div{'ng-repeat': 'contact in activity.contacts'}
          {{contact.name}}