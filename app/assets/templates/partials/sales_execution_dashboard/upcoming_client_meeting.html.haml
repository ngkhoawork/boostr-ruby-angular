%h3
  Upcoming Account Meetings
%hr{width: '100%'}
%table.table.table-hover.table-striped
  %thead
    %tr
      %th.left
        Date
      %th.left Account
  %tbody
    %tr{ 'ng-repeat': 'activity in topActivities', 'popover-template': "'activityPopupHtml'", 'popover-placement': 'top', 'popover-trigger': 'mouseenter' }
      %td.left
        {{activity.happened_at | date:'MM-dd-yyyy'}}
      %td.left {{activity.client.name}}

%script{ type: 'text/ng-template', id: 'activityPopupHtml' }
  %table.activity-popup
    %tr
      %td
        Type:
      %td
        {{activity.activity_type_name}}
    %tr
      %td
        Comment:
      %td
        %div{ng: {'text-truncate': 'activity.comment', 'tt-chars-threshold': '500', 'tt-no-toggling': 'tt-no-toggling'}}
    %tr
      %td
        Attendees:
      %td
        %div{'ng-repeat': 'contact in activity.contacts'}
          {{contact.name}}
