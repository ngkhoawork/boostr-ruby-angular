%h3
  Largest Open Deals
%hr{width: '100%'}
%table.table.table-hover.table-striped
  %thead
    %tr
      %th.left Account
      %th.left Budget
      %th.left %
      %th.left{width: "100"}
        Start Date
      %th.left Next Step

  %tbody
    %tr{ 'ng-repeat': 'deal in topDeals' }
      %td.left {{ deal.advertiser.name }}
      %td.left {{ deal.budget | currency: '$' : 0}}
      %td.left {{ deal.stage.probability }}
      %td.left {{ deal.start_date | date:'MM-dd-yyyy' }}
      %td.left {{ deal.next_steps }}
