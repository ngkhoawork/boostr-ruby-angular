#contact.z-styles.z-detail-page
	.container-fluid
		.row
			.col-xs-9
				.block.detail-stats.contact-stats
					%div.contact-title
						%span.main-title
							{{currentContact.name}}
							%i.fa.fa-pencil.edit-deal{'ng-click': 'showEditModal(currentContact)'}
							%i.fa.fa-trash.delete-deal{'ng-click': 'deleteContact(currentContact)'}
						.detail-info
							Last Touched: {{currentContact.last_touched | date}}

					%div.stats-body
						%div.stats-col
							.col-body-wrap
								.col-body
									.description Won Deals
									.title 15

						%div.stats-col
							.col-body-wrap
								.col-body
									.description Closed Deals
									.title 10

						%div.stats-col
							.col-body-wrap
								.col-body
									.description Open Deals
									.title 5

						%div.stats-col
							.col-body-wrap
								.col-body
									%span.error-tooltip{'ng-show': 'errors.stage'} {{ errors.stage }}
									.description Interactions
									.title 20

				.block
					%div.mb20
						%span.title Related Accounts
						%add-button{'ng-click': ''} Add
					.table-wrapper
						%table.table.table-hover
							%thead
								%tr
									%th Name
									%th Status
									%th City
							%tbody
								%tr
									%td name...
									%td status...
									%td city...
								%tr
									%td name...
									%td status...
									%td city...
								%tr
									%td name...
									%td status...
									%td city...
								%tr
									%td name...
									%td status...
									%td city...


			.col-xs-3
				.block.contact-info.campaign-details
					%div.mb20
						%span.title Info
					%div.custom-field-item
						%div.custom-field-item-label Works At
						%div.custom-field-item-field {{currentContact.primary_client_json.name || '-'}}
					%div.custom-field-item
						%div.custom-field-item-label Address
						%div.custom-field-item-field
							%div {{ currentContact.address.street1 || '-'}}
							%div {{ concatAddress(currentContact.address) }}
					%div.custom-field-item
						%div.custom-field-item-label Phone
						%div.custom-field-item-field {{currentContact.address.phone || '-'}}
					%div.custom-field-item
						%div.custom-field-item-label Email
						%div.custom-field-item-field {{currentContact.address.email || '-'}}
					%div.custom-field-item
						%div.custom-field-item-label Notes
						%div.custom-field-item-field {{currentContact.note || '-'}}

				%div{'ng-include': '"partials/dashboard/activity.html"'}
