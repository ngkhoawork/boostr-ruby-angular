#deals
  #nav.transparent
    .container
      .row
        .col-xs-12
          %ul.nav.nav-tabs
            %li.pull-right.last
              %a.upload{ href: '', ng: { click: 'showModal()' } }
                = inline_svg 'icons/add.svg'
                New Deal

  .container
    .row
      .col-xs-3
        .list-group.list-sm.stages
          %a.list-group-item.vertical-center{ href: '', ng: { click: 'showStage("open")', class: '{ active: currentStage == "open" }'} }
            .col-xs-5
            .col-xs-7
              .row
                %h5
                  All Open ({{ openStagesCount }})
              .row
                $500,000
          %a.list-group-item.vertical-center{ href: '', ng: { repeat: 'stage in stages', click: 'showStage(stage)', class: '{ active: currentStage == stage.id }' } }
            .col-xs-5
            .col-xs-7
              .row
                %h5
                  {{ stage.name }} ({{ stage.deals_count || 0 }})
              .row
                $500,000
      .col-xs-9
        %h3
          My Open Deals

        .table-wrapper
          %table.table.table-hover.table-striped
            %thead
              %tr
                %th Opportunity
                %th Advertiser
                %th Stage
                %th Spend
                %th Start Date
                %th
                %th
            %tbody
              %tr{ ng: { repeat: 'row in filteredDeals'} }
                %td {{ row.name }}
                %td {{ row.advertiser.name }}
                %td {{ row.stage.name }}
                %td {{ row.budget / 100 | currency:'$':0 }}
                %td {{ row.start_date | date: 'shortDate' }}
                %td{ ng: { click: 'go("/deals/" + row.id)'  } }
                  = inline_svg 'icons/caret.svg'
                %td.info-td
                  .empty
                %td.action-td{ ng: { click: 'delete(row)' } }
                  = inline_svg 'icons/trash.svg'
