#notification-modal
  %form{ name: 'api_configuration_form', ng: { submit: 'submitForm()' } }
    .modal-header.text-center
      %a.close{ ng: { click: 'cancel()' } }
        %span{'aria-hidden' => 'true'}
          = inline_svg 'icons/close.svg'
      %h3.modal-title
        %strong
          {{ formType }} Api Integration
    .modal-body
      .form-group
        .row
          .col-xs-12
            %label.control-label{for: 'switched_on'} Switch on/off integration
            %input{ ng: { model: 'api_configuration.switched_on' }, type: 'checkbox' }
        .row
          .col-xs-12
            %label.control-label{ for: 'integration_type' } Integration type
            %select.form-control{ ng: {model: 'api_configuration.integration_type', options: 'type for type in integration_types', disabled: 'formType == "Edit"'} }
        .row{ng: {if: "api_configuration.integration_type == 'operative'"}}
          .col-xs-12
            %label.control-label{ for: 'trigger_on_deal_percentage' } Triggers on deal percentage
            %input.form-control{ placeholder: 'Eg. 100', ng: { model: 'api_configuration.trigger_on_deal_percentage' }, name: 'trigger_on_deal_percentage', type: 'number', required: true }
        .row
          .col-xs-12
            %label.control-label{ for: 'base_link' } Base link
            %input.form-control{ placeholder: 'https://integrations.com/api', ng: { model: 'api_configuration.base_link' }, name: 'base_link', type: 'url', required: true }
        .row
          .col-xs-12
            %label.control-label{ for: 'api_email' } API username
            %input.form-control{ placeholder: 'example@email.com', ng: { model: 'api_configuration.api_email' }, name: 'api_email', type: 'email', required: true  }

        .row{ ng: { if: 'formType == \'Edit\'' } }
          .col-xs-12
            %label.control-label{ for: 'need_change_password' } Need to change password?
            %input{ ng: { model: 'need_change_password', click: 'set_neet_set_password(need_change_password)' }, type: 'checkbox', name: 'need_change_password' }

        .row{ ng: { if: 'need_change_password' } }
          .col-xs-12
            %label.control-label{ for: 'password' } Api password
            %input.form-control{ placeholder: 'Please enter new password', ng: { model: 'api_configuration.password' }, name: 'password', type: 'password' }
    .modal-footer.text-center
      %button.btn.btn-primary.btn-lg{ type: 'submit' } {{ submitText }}
      %a.btn.btn-default.btn-lg{ ng: { click: 'cancel()' } } Cancel
