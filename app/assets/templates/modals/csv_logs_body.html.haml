#activity-form-modal.popup-modal
    .popup-modal-header
        Error Messages
        %span.close-btn{'ng-click': 'cancel()'} +
    .popup-modal-body
        .alert.alert-danger{ role: 'alert', ng: { repeat: 'error in errors' } }
            %strong
                Row {{ error.row }}
            contains errors: {{ error.message.join(', ') }}

    .popup-modal-footer
        %button.btn.btn-default{'type': 'button', 'ng-click': 'cancel()'} Close
