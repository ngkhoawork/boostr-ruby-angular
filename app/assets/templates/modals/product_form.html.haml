#product-modal
  %form{ ng: { submit: 'submitForm()' } }
    .modal-header.text-center
      %a.close{ ng: { click: 'cancel()' } }
        %span{'aria-hidden' => 'true'}
          = inline_svg 'icons/close.svg'
      %h3.modal-title
        %strong
          {{ formType }} Product
    .modal-body
      .form-group
        %label.control-label{ for: 'name' } Name
        %input.form-control{ placeholder: 'Name', ng: { model: 'product.name' }, name: 'name' }

      .form-group
        %label.control-label{ for: 'product-line' } Product Line
        %ui-select{ name: 'product-line', ng: { model: 'product.product_line', disabled: true } }
          %ui-select-match{ placeholder: 'Product Line' }
            {{ $select.selected }}
          %ui-select-choices{ repeat: 'product_line in product_lines | filter: $select.search' }
            %div{ ng: { bind: { html: 'product_line' } } }

      .form-group
        %label.control-label{ for: 'family' } Family
        %ui-select{ name: 'family', ng: { model: 'product.family', disabled: true } }
          %ui-select-match{ placeholder: 'Family' }
            {{ $select.selected }}
          %ui-select-choices{ repeat: 'family in families | filter: $select.search' }
            %div{ ng: { bind: { html: 'family' } } }

      .form-group
        %label.control-label{ for: 'pricing-type' } Pricing Type
        %ui-select{ name: 'pricing-type', ng: { model: 'product.pricing_type', disabled: true } }
          %ui-select-match{ placeholder: 'Pricing Type' }
            {{ $select.selected }}
          %ui-select-choices{ repeat: 'pricing_type in pricing_types | filter: $select.search' }
            %div{ ng: { bind: { html: 'pricing_type' } } }

    .modal-footer.text-center
      %button.btn.btn-primary.btn-lg{ type: 'submit', ng: { disabled: 'buttonDisabled' } } {{ submitText }}
      %a.btn.btn-default.btn-lg{ ng: { click: 'cancel()' } } Cancel
