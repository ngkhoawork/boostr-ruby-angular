#deal_modal.popup-modal
  %form{ ng: { submit: 'submitForm()' } }
    .popup-modal-header
      {{ formType }}
      %span.close-btn{'ng-click': 'cancel()'} +
    .popup-modal-body
      .form-group{'ng-class':'{error: errors.reason}'}
        %span.error-text {{errors.reason}}
        %label{ for: 'close-reason' } Reason
        .dropdown
          %button.btn.btn-primary.dropdown-toggle{'data-toggle': 'dropdown', type: 'button'}
            %span{'ng-hide': 'selectedReason', style: 'color: #D4CFDA'} Reason
            %span
              %b {{selectedReason}}
            %span.caret
          %ul.dropdown-menu
            %li{'ng-repeat': 'option in currentDeal.close_reason.options', 'ng-class': '{active: currentDeal.close_reason.option_id == option.id}'}
              %a{'href': '', 'ng-click': 'currentDeal.close_reason.option_id = option.id; selectReason(option.name)'}
                %span
                  %b {{option.name}}
      .form-group
        %label Comment
        %textarea.form-control{'msd-elastic': '', rows: '1', 'ng-model': 'currentDeal.closed_reason_text', placeholder: 'Enter comment'}

    .popup-modal-footer.text-center
      %button.btn.btn-default{'type': 'button', 'ng-click': 'cancel()'} Cancel
      %button.btn.btn-primary{ type: 'submit', ng: { disabled: 'buttonDisabled' } } {{ submitText }}
