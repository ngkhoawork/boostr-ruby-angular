#notification-modal
  %form{ name: 'api_configuration_form', ng: { submit: 'submitForm()' } }
    .modal-header.text-center
      %a.close{ ng: { click: 'cancel()' } }
        %span{'aria-hidden' => 'true'}
          = inline_svg 'icons/close.svg'
      %h3.modal-title
        %strong
          {{ formType }} Hoopla Integration
    .modal-body
      .form-group
        .row
          .col-xs-6
            %label.control-label{ for: 'switched_on' } Switch on/off integration
            %input{ ng: { model: 'api_configuration.switched_on', disabled: '!connected' }, type: 'checkbox' }
          .col-xs-6
            %strong.text-success.pull-right{ ng: { if: 'connected' } }  Connected
            %strong.text-danger.pull-right{ ng: { if: '!connected' } }  Not Connected
        .row
          .col-xs-12
            %label.control-label{ for: 'integration_provider' } Integration type
            %input.form-control{ ng: { model: 'api_configuration.integration_provider' }, disabled: 'true' }
        .row
          .col-xs-12
            %label.control-label{ for: 'client_id' } Client ID
            %input.form-control{ ng: { model: 'api_configuration.hoopla_details_attributes.client_id' }, name: 'client_id', placeholder: 'Enter Client ID', required: true }
        .row
          .col-xs-12
            %label.control-label{ for: 'client_secret' } Client Secret
            %input.form-control{ ng: { model: 'api_configuration.hoopla_details_attributes.client_secret' }, name: 'client_secret', placeholder: 'Enter Client Secret', required: true }
    .modal-footer.text-center
      .text-center.mb20{ ng: { if: '!connected && loaded' } }
        %strong.text-danger Please provide valid Client ID and Client Secret
      %button.btn.btn-primary.btn-lg{ type: 'submit' } {{ submitText }}
      %a.btn.btn-default.btn-lg{ ng: { click: 'cancel()' } } Cancel
      
  