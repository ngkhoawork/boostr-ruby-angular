#user_quota_modal
  %form.form-horizontal{ ng: { submit: 'submitForm()' } }
    .modal-header.text-center
      %a.close{ ng: { click: 'cancel()' } }
        %span{'aria-hidden' => 'true'}
          = inline_svg 'icons/close.svg'
      %h3.modal-title
        %strong
          {{ formType }} Deal Custom Field

    .modal-body
      .form-group{ ng: { if: 'formType == "New"' } }
        .row
          .col-xs-12
            %label.control-label{ for: 'field_type' } Field Type
            %ui-select{ name: 'field_type', ng: { model: 'dealCustomFieldName.field_type', disabled: true } }
              %ui-select-match{ placeholder: 'Select A Field Type' }
                {{ $select.selected.name }}
              %ui-select-choices{ repeat: 'fieldType.value as fieldType in fieldTypes | filter: { name: $select.search }' }
                %div{ ng: { bind: { html: 'fieldType.name' } } }
      .form-group
        .row
          .col-xs-12
            %label.control-label{ for: 'field_label' } Field Label
            %input.form-control{ name: 'field_label', placeholder: 'Enter Field Label', ng: { model: 'dealCustomFieldName.field_label' } }
      .form-group
        .row
          .col-xs-12
            %label.control-label{ for: 'position' } Position
            %input.form-control{ name: 'position', placeholder: 'Enter Position', ng: { model: 'dealCustomFieldName.position' } }
      .form-group
        .row
          .col-xs-12
            %label.control-label{ for: 'is_required' } Required
            %ui-select{ name: 'is_required', ng: { model: 'dealCustomFieldName.is_required', disabled: true } }
              %ui-select-match{ placeholder: 'Is Required' }
                {{ $select.selected.name }}
              %ui-select-choices{ repeat: 'requiredChoice.value as requiredChoice in requiredChoices | filter: { name: $select.search }' }
                %div{ ng: { bind: { html: 'requiredChoice.name' } } }

    .modal-footer
      %button.btn.btn-primary.btn-lg{ type: 'submit', ng: { disabled: 'buttonDisabled' } } {{ submitText }}
      %a.btn.btn-default.btn-lg{ ng: { click: 'cancel()' } } Cancel
