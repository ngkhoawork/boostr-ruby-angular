#user-modal
  %form{ ng: { submit: 'submitForm()' } }
    .modal-header.text-center
      %a.close{ ng: { click: 'cancel()' } }
        %span{'aria-hidden' => 'true'}
          = inline_svg 'close.svg'
      %h3.modal-title
        %strong
          {{ formType }} User
    .modal-body
      .form-group
        %label.control-label{ for: 'first_name' } First Name
        %input.form-control{ placeholder: 'First Name', ng: { model: 'user.first_name' }, name: 'first_name' }

      .form-group
        %label.control-label{ for: 'last_name' } Last Name
        %input.form-control{ placeholder: 'Last Name', ng: { model: 'user.last_name' }, name: 'last_name' }

      .form-group
        %label.control-label{ for: 'title' } Title
        %input.form-control{ placeholder: 'Title', ng: { model: 'user.title' }, name: 'title' }

      .form-group
        %label.control-label{ for: 'email' } Email
        %input.form-control{ placeholder: 'Email', ng: { model: 'user.email', disabled: '{{ hideEmail }}' }, name: 'email' }

    .modal-footer.text-center
      %button.btn.btn-primary.btn-lg{ type: 'submit' } {{ submitText }}
      %a.btn.btn-default.btn-lg{ ng: { click: 'cancel()' } } Cancel
