#egnyte_modal.popup-modal
  %form{ ng: { submit: 'submitForm()' } }
    .popup-modal-header
      {{formType}} Folder
      %span.close-btn{'ng-click': 'cancel()'}
    .popup-modal-body
      .alerts{ 'ng-repeat': '(field, fieldErrors) in responseErrors' }
        .alert.alert-danger{ 'ng-repeat': 'error in fieldErrors' }
          %i.fa.fa-warning
          {{error}}

      .form-group{'ng-class':'{error: errors.title}'}
        %span.error-text {{errors.title}}
        %label{ for: 'title' }
          Title
        %span.star *
        %input.form-control{ placeholder: 'Title', ng: { model: 'newFolder.title' }, name: 'title' }

    .modal-footer.text-center
      %button.btn.btn-primary.btn-lg{ type: 'submit', ng: { disabled: 'buttonDisabled' } } {{actionType}}
      %a.btn.btn-default.btn-lg{ ng: { click: 'cancel()' } } Cancel
