#contact_modal
  %form.form-horizontal{ ng: { submit: 'submitForm()' } }
    .modal-header.text-center
      %button.close{ ng: { click: 'cancel()' } }
        %span{'aria-hidden' => 'true'}
          = inline_svg 'close.svg'
      %h2.modal-title
        %strong
          {{ formType }} Contact
    .modal-body
      .form-group
        .col-xs-11.col-xs-offset-1
          %input.form-control{ name: 'name', placeholder: 'Name', ng: { model: 'contact.name' } }
      .form-group
        .col-xs-11.col-xs-offset-1
          %select.form-control{ name: 'client', ng: { model: "contact.client_id", options: "client.id as client.name for client in clients" } }
            %option{style: "display:none", value: ""} Select A Client
      .form-group
        .col-xs-11.col-xs-offset-1
          %input.form-control{ name: 'position', placeholder: 'Position', ng: { model: 'contact.position' } }
      .form-group
        .col-xs-11.col-xs-offset-1
          %input.form-control{ name: 'street1', placeholder: 'Address', ng: { model: 'contact.address.street1' } }
      .form-group
        .col-xs-5.col-xs-offset-1
          %input.form-control{ name: 'city', placeholder: 'City', ng: { model: 'contact.address.city' }  }
        .col-xs-2
          %input.form-control{ name: 'state', placeholder: 'State', ng: { model: 'contact.address.state' }  }
        .col-xs-4
          %input.form-control{ name: 'zip', placeholder: 'Zip', ng: { model: 'contact.address.zip' }  }
      .form-group
        %label.col-sm-2.control-label{ for: 'office'} Office
        .col-sm-10
          %input.form-control{ name: 'office', placeholder: 'Office Number', ng: { model: 'contact.address.office' } }
      .form-group
        %label.col-sm-2.control-label{ for: 'email'} Email
        .col-sm-10
          %input#email.form-control{ name: 'email', placeholder: 'Email', ng: { model: 'contact.address.email' } }

    .modal-footer
      %button.btn.btn-primary.btn-lg{ type: 'submit'} {{ submitText }}
      %button.btn.btn-default.btn-lg{ ng: { click: 'cancel()' } } Cancel
