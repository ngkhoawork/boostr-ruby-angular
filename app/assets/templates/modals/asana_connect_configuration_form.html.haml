#notification-modal
  %form{ name: 'api_configuration_form', ng: { submit: 'submitForm()' } }
    .modal-header.text-center
      %a.close{ ng: { click: 'cancel()' } }
        %span{'aria-hidden' => 'true'}
          = inline_svg 'icons/close.svg'
      %h3.modal-title
        %strong
          {{ formType }} Asana Integration
    .modal-body
      .form-group
        .row
          .col-xs-12
            %label.control-label{for: 'switched_on'} Switch on/off integration
            %input{ ng: { model: 'api_configuration.switched_on' }, type: 'checkbox' }
        .row
          .col-xs-12
            %label.control-label{ for: 'integration_provider' } Integration type
            %input.form-control{ ng: { model: 'api_configuration.integration_provider' }, disabled: 'true' }
        .row
          .col-xs-12
            %label.control-label{ for: 'workspace_name' } Organization Name
            %input.form-control{ placeholder: 'Organization Name', ng: { model: 'api_configuration.asana_connect_details_attributes.workspace_name' }, name: 'workspace_name', required: true  }
        .row
          .col-xs-12
            %label.control-label{ for: 'project_name' } Default Project
            %input.form-control{ placeholder: 'Project Name', ng: { model: 'api_configuration.asana_connect_details_attributes.project_name' }, name: 'project_name', required: true  }
    .modal-footer.text-center
      %button.btn.btn-primary.btn-lg{ type: 'submit' } {{ submitText }}
      %a.btn.btn-default.btn-lg{ ng: { click: 'cancel()' } } Cancel
