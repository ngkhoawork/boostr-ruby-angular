#client_modal
  %form.form-horizontal{ ng: { submit: 'submitForm()' } }
    .modal-header.text-center
      %button.close{ ng: { click: 'cancel()' } }
        %span{'aria-hidden' => 'true'}
          = inline_svg 'close.svg'
      %h2.modal-title
        %strong
          {{ formType }} Client
    .modal-body
      .form-group
        .col-xs-11.col-xs-offset-1
          %input.form-control{ placeholder: 'Name', ng: { model: 'client.name' }, name: 'name' }

      .form-group
        .col-xs-7.col-xs-offset-1
          %input.form-control{ placeholder: 'City', ng: { model: 'client.address_attributes.city' }  }
        .col-xs-4
          %input.form-control{ placeholder: 'State', ng: { model: 'client.address_attributes.state' }  }
      .form-group
        %label.col-sm-2.control-label{:for => 'office'} Office
        .col-sm-10
          %input#exampleInputEmail1.form-control{:placeholder => 'Office Number', ng: { model: 'client.address_attributes.office' } }
      .form-group
        %label.col-sm-2.control-label{:for => 'email'} Email
        .col-sm-10
          %input#inputPassword3.form-control{:placeholder => 'Email', ng: { model: 'client.address_attributes.email' } }
      .form-group
        %label.col-sm-2.control-label{:for => 'website'} Website
        .col-sm-10
          %input#inputPassword3.form-control{:placeholder => 'Website', ng: { model: 'client.website' } }

    .modal-footer
      %button.btn.btn-primary.btn-lg{ type: 'submit' } {{ submitText }}
      %button.btn.btn-default.btn-lg{ ng: { click: 'cancel()' } } Cancel