#pipeline-split-report.z-styles
	.container-fluid
		.row.mb20
			.reports-header
				.header-cell.main-title
					Pipeline Split Adjusted
				.header-cell.filters-block
					%table
						%tr.filter-title
							%td Team
							%td Seller
							%td Stage
							%td Status
							%td
								%span.reset-filter{'ng-click': 'resetFilter()'}
									Reset
						%tr
							%td
								%tree-dropdown{ class:"tree-dropdown team-list", data:"teams", selected: 'filter.team', 'ng-class': '{"empty": filter.team.name === "All"}'}

							%td
								%ul.filter-item
									%li{ dropdown: true }
										%a{ href: '', dropdown: { toggle: true }, 'ng-class': '{"empty": filter.seller.name === "All"}' }
											{{filter.seller.name}}
											%span.caret
										%ul.dropdown-menu
											%li{ ng: { repeat: 'seller in sellers', class: '{active: seller.id === filter.seller.id}' } }
												%a{ href: '', ng: { click: 'setFilter("seller", seller)' } }
													{{seller.name}}

							%td
								%ul.filter-item
									%li{ dropdown: true }
										%a{ href: '', dropdown: { toggle: true }, 'ng-class': '{"empty": filter.stages.length == 0}' }
											%span{'ng-if': 'filter.stages.length == 0'}
												All
											%span{'ng-repeat': 'stage in filter.stages'}
												{{stage.name}} {{stage.probability + '%'}}
												%i.fa.fa-times.close-btn{'ng-click': 'removeFilter("stages", stage)'}
											%span.caret
										%ul.dropdown-menu
											%li{ ng: { repeat: 'stage in stages | orderBy: ["-open", "probability"]' } }
												%a{ href: '', ng: { click: 'setFilter("stages", stage)' } }
													{{stage.name}} {{isNumber(stage.probability) ? stage.probability + '%' : ''}}

							%td
								%ul.filter-item
									%li{ dropdown: true }
										%a{ href: '', dropdown: { toggle: true }, 'ng-class': '{"empty": filter.status.name === "All"}' }
											{{filter.status.name}}
											%span.caret
										%ul.dropdown-menu
											%li{ ng: { repeat: 'status in statuses', class: '{active: status.name === filter.status.name}' } }
												%a{ href: '', ng: { click: 'setFilter("status", status)' } }
													{{ status.name }}

				.header-cell
					%button.add-btn{'ng-click': 'applyFilter()'}
						Run Report

				.header-cell
					.pull-right
						%download-button{'ng-click': 'export()'}
							Export

		.row
			.col-xs-12
				.block
					.total-stats.mb20
						%div.stats-col
							.value {{getPipelineUnweighted() | currency: '$': 0 }}
							.text Total Pipeline (UW)

						%div.stats-col
							.value {{getPipelineWeighted() | currency: '$': 0 }}
							.text Total Pipeline (W)

						%div.stats-col
							.value {{deals.length}}
							.text Total Deals
					%div.table-wrapper
						%table.table.table-hover
							%thead
								%tr
									%th
										%span.clickable{'ng-click': 'sorting.set("deal_id")'} Deal ID
									%th
										%span.clickable{'ng-click': 'sorting.set("deal_name")'} Name
									%th
										%span.clickable{'ng-click': 'sorting.set("advertiser.name")'} Advertiser
									%th
										%span.clickable{'ng-click': 'sorting.set("agency.name")'} Agency
									%th
										%span.clickable{'ng-click': 'sorting.set("name")'} Team Member
									%th
										%span.clickable{'ng-click': 'sorting.set("share")'} Split %
									%th
										%span.clickable{'ng-click': 'sorting.set("stage.name")'} Stage
									%th
										%span.clickable{'ng-click': 'sorting.set("stage.probability")'} %
									%th
										%span.clickable{'ng-click': 'sorting.set("budget_loc")'} Budget
									%th
										%span.clickable{'ng-click': 'sorting.set("budget")'} Budget USD
									%th
										%span.clickable{'ng-click': 'sorting.set("split_budget")'} Split Budget USD
									%th
										%span.clickable{'ng-click': 'sorting.set("type")'} Type
									%th
										%span.clickable{'ng-click': 'sorting.set("source")'} Source
									%th
										%span.clickable{'ng-click': 'sorting.set("next_steps")'} Next Steps
									%th
										%span.clickable{'ng-click': 'sorting.set("start_date")'} Start Date
									%th
										%span.clickable{'ng-click': 'sorting.set("end_date")'} End Date
									%th
										%span.clickable{'ng-click': 'sorting.set("created_date")'} Created Date
									%th
										%span.clickable{'ng-click': 'sorting.set("closed_date")'} Closed Date
							%tbody
								%tr{'ng-repeat': 'deal in deals | orderBy : sorting.key : sorting.reverse'}
									%td {{deal.deal_id}}
									%td
										%a{href: '', 'ng-href': '/deals/{{deal.deal_id}}'} {{deal.deal_name}}
									%td
										%a{href: '', 'ng-href': '/accounts/{{deal.advertiser.id}}'} {{deal.advertiser.name}}
									%td
										%a{href: '', 'ng-href': '/accounts/{{deal.agency.id}}'} {{deal.agency.name}}
									%td {{deal.name}}
									%td {{deal.share}}%
									%td {{deal.stage.name}}
									%td {{deal.stage.probability}}%
									%td {{deal.budget_loc | currency : deal.curr_symbol || deal.curr_cd: 0 }}
									%td {{deal.budget | currency: '$': 0 }}
									%td {{deal.split_budget | currency: '$': 0 }}
									%td {{deal.type}}
									%td {{deal.source}}
									%td {{deal.next_steps}}
									%td {{deal.start_date | date : 'shortDate'}}
									%td {{deal.end_date | date : 'shortDate'}}
									%td {{deal.created_date | date : 'shortDate'}}
									%td {{deal.closed_date | date : 'shortDate'}}
