#dashboard
  .container
    .row
      .col-xs-12
        %h3
          My Stats
    .row
      .col-xs-12
        #stats.well
          .row
            .col-xs-12
              %h4{ ng: { hide: 'dashboard.forecast' } }
                Oops! No quota, no commissions.
              .header{ ng: { show: 'dashboard.forecast' } }
                %ul.list-inline
                  %li.attainment
                    %h2
                      {{ dashboard.forecast.percent_to_quota | number: 0 }}%
                    %h5
                      Attainment
                  %li.quota
                    %h2
                      {{ dashboard.forecast.quota | currency: '$': 0 }}
                    %h5
                      Quota
                  %li.forecast
                    %h2
                      {{ dashboard.forecast.amount | currency: '$': 0 }}
                    %h5
                      Forecast
                  %li.gap-to-goal
                    %h2
                      {{ dashboard.forecast.gap_to_quota | currency: '$': 0 }}
                    %h5
                      Gap to Goal
    .row
      .col-xs-7
        #deals.section
          %h3
            My Open Deals

          .well.no-deals{ ng: { hide: 'dashboard.deals.length > 0' } }
            .row
              .col-xs-12
                There are no deals yet.
                %a{ href: '', ng: { click: 'showNewDealModal()' } }
                  Add deal.

          .table-wrapper{ ng: { show: 'dashboard.deals.length > 0' } }
            %table.table.table-hover.table-striped
              %thead
                %tr
                  %th Deal
                  %th Stage
                  %th Start Date
              %tbody
                %tr{ ng: { repeat: 'row in dashboard.deals'} }
                  %td
                    %a{ href: '', ng: { href: '/deals/{{row.id}}' } }
                      {{ row.name }}
                  %td {{ row.stage.name }}
                  %td {{ row.start_date | date: 'shortDate' }}
